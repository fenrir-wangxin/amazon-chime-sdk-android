<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/tile_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.amazonaws.services.chime.sdk.meetings.audiovideo.video.DefaultVideoRenderView
            android:id="@+id/video_fragment_surface"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center" />

        <ImageButton
            android:id="@+id/on_small_button"
            android:layout_marginTop="10dp"
            android:layout_marginStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/switch_camera"
            android:src="@drawable/ic_ic_full_screen"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/change_camera_button"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/switch_camera"
            android:src="@drawable/ic_ic_flip"
            android:visibility="visible" />
    </RelativeLayout>

    <FrameLayout
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/video_bottom_bg">

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/button_speaker"
                android:src="@drawable/ic_ic_microphone"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="40dp"/>

            <ImageView
                android:id="@+id/button_leave"
                android:src="@drawable/ic_ic_phone"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="40dp"/>

            <ImageView
                android:paddingTop="6dp"
                android:id="@+id/button_video"
                android:src="@drawable/ic_ic_video_call"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="40dp"/>
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:visibility="invisible"
        android:background="@drawable/small_window_bg"
        android:elevation="5dp"
        android:id="@+id/frame_layout"
        android:layout_marginBottom="130dp"
        android:layout_gravity="right|bottom"
        android:layout_width="136dp"
        android:layout_height="160dp">
        <com.amazonaws.services.chime.sdk.meetings.audiovideo.video.DefaultVideoRenderView

            android:layout_gravity="center"
            android:id="@+id/video_surface1"
            android:layout_width="121dp"
            android:layout_height="146dp"
            android:gravity="center" />
    </FrameLayout>



</FrameLayout>